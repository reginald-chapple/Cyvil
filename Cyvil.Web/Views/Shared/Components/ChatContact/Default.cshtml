@model ChatViewModel


<a asp-area="Members" asp-controller="Messenging" asp-action="Chat" asp-route-id="@Model.ChatId">
    <div class="">
        @if (Model.Avatar == Model.Name[..1])
        {
            <div class="rounded-circle  border border-2 border-white"><span>@Model.Avatar</span></div>
        }
        else
        {
            <img height="100" width="100" class="rounded-circle border border-2 border-white" src="~/media/members/@Model.Avatar" alt="" />
        }
        <span class="bg-primary rounded-circle top-0 end-0 position-absolute text-white d-flex flex-center fs--2 fw-semi-bold d-none d-sm-flex d-xl-none lh-1" style="height: 1rem; width: 1rem;">3</span>
    </div>
    <div class="flex-1 d-sm-none d-xl-block">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="text-900 fw-normal name text-nowrap">@Model.Name</h5>
        </div>
    </div>
</a>